section.todoapp

  header.header
    h1 todos
    input.new-todo(placeholder="What needs to be done?" autofocus)

  if todos.length
    section.main
      input.toggle-all(type="checkbox")
      label(htmlFor="toggle-all") Mark all as complete
      ul.todo-list
        for todo, ti in todos
          li(class=todo.completed ? 'completed' : ti == editing ? 'editing' : '')
            .view
              input.toggle(type="checkbox" checked=todo.completed)
              label= todo.text
              button.destroy
            input.edit(value="What is this text for")
    footer.footer
      span.todo-count
        - itemsLeft = todos.filter(t => !t.completed).length
        strong= String(itemsLeft)
        | #{' item' + (itemsLeft === 1 ? '' : 's') + ' left'}
